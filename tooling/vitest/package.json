{
  "name": "@internal/vitest-config",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "exports": {
    ".": {
      "default": "./index.ts"
    },
    "./lib": {
      "default": "./lib.ts"
    },
    "./react": {
      "default": "./react.ts"
    }
  },
  "main": "./index.ts",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist",
    "clean:all": "git clean -xdf .cache .turbo dist node_modules",
    "typecheck": "tsc --noEmit",
    "lint": "eslint",
    "format": "prettier --check . --ignore-path ../../.gitignore --ignore-path ../../.prettierignore"
  },
  "devDependencies": {
    "@internal/prettier-config": "workspace:*",
    "@internal/tsconfig": "workspace:*",
    "@pixpilot/dev-config": "catalog:dev",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "16.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "catalog:dev",
    "jsdom": "^26.1.0",
    "typescript-eslint": "catalog:dev",
    "vitest": "catalog:dev"
  },
  "prettier": "@internal/prettier-config"
}
